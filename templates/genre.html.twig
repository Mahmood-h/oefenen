{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Year</th>
            <th scope="col">Budget</th>
        </tr>
        </thead>

        <tbody>
        {% for movie in genre.movies %}
        <tr>

            <td>{{ movie.title }}</td>
            <td>{{ movie.description }}</td>
            <td>{{ movie.year }}</td>
            <td>{{ movie.budget }}</td>
        </tr>
        {% endfor %}
        </tbody>

    </table>
    <a class="btn btn-primary" href="/home"><b>back</b> </a>
{%endblock %}